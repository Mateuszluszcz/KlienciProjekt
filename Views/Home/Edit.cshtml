@model WebApplication2.Models.Klienci

<h2>Edytuj dane klienta</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" aps-for="ID"/>
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
    </div>
    <div>
        <label asp-for="Surname"></label>
        <input asp-for="Surname" />
    </div>
    <div>
        <label asp-for="PESEL"></label>
        <input asp-for="PESEL" />
    </div>
    <div>
        <label asp-for="BirthYear"></label>
        <input asp-for="BirthYear" type="number" />
    </div>
    <div>
        <label asp-for="Płec"></label>
        <input asp-for="Płec" type="number" />
    </div>
    <button type="submit">Dodaj klienta</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
